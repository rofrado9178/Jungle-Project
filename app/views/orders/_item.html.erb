<tr>
  <td>
    <%= image_tag product.image.tiny %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    <%= Money.ca_dollar(product.price ).format(no_cents_if_whole:true) %>
  </td>
  <td>
    <%= quantity %>
  </td>
  <td>
    <%= Money.ca_dollar(product.price * quantity).format(no_cents_if_whole:true)%>
  </td>
</tr>
